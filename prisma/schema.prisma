// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  userCode  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Role {
  id                Int      @id @default(autoincrement())
  description       String
  programPermission String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Program {
  id          Int      @id @default(autoincrement())
  permitRoles String
  programName String
  route       String
  params      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Patient {
  id         Int       @id @default(autoincrement())
  patientNo  String    @unique
  fullName   String
  dob        DateTime
  age        Int
  sex        GENDER
  bloodGroup BLOODTYPE
  alergy     String?
  fatherName String?
  spouseName String?
  street     String
  township   String
  city       String
  zipCode    String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model Person {
  id            Int      @id @default(autoincrement())
  personNo      String
  personType    String
  fullName      String
  qualification String
  street        String
  township      String
  city          String
  zipCode       Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model IncomeBill {
  id          Int      @id @default(autoincrement())
  patientNo   String
  totalAmount Decimal
  operatorNo  String   @unique
  isPosted    Boolean  @default(false)
  isVoided    Boolean  @default(false)
  postedDate  DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model IncomeBillItem {
  id           Int      @id @default(autoincrement())
  incomeBillId Int
  costCode     String   @unique
  amount       Decimal
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model ExpenseBill {
  id          Int      @id @default(autoincrement())
  patientNo   String
  totalAmount Decimal
  operatorNo  String   @unique
  isPosted    Boolean  @default(false)
  isVoided    Boolean  @default(false)
  postedDate  DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ExpenseBillItem {
  id            Int      @id @default(autoincrement())
  expenseBillId Int
  costCode      String   @unique
  amount        Decimal
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

enum GENDER {
  MALE
  FEMALE
}

enum BLOODTYPE {
  A_positive
  A_negative
  B_positive
  B_negative
  AB_positive
  AB_negative
  O_positive
  O_negative
}
